<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>home</title>
</head>

<body>
    <h1>URl shortenr</h1>
    <% if(locals.id) { %>
        <p>Short url generated: http://localhost:8081/url/<%= id %>
        </p>
        <%} %>

            <form method="POST" action="/url" enctype="application/json">
                <label>Enter the original URL</label>
                <input type="text" placeholder="www.website.com" name="url" />
                <button type="submit">generate</button>
            </form>

            <div>
                <% if(locals.urls) { %>
                    <table>
                        <thead>
                            <th>S. No</th>
                            <th>ShortID</th>
                            <th>Redirect</th>
                            <th>Clicks</th>
                        </thead>
                        <tbody>
                            <% urls.forEach((url,index)=> {%>
                                <tr>
                                    <td>
                                        <%= index+1 %>
                                    </td>

                                    <td>
                                        <%= url.shortID %>
                                            <% console.log(URL.ShortID)%>
                                    </td>

                                    <td>
                                        <%= url.redirectUrl %>
                                    </td>

                                    <td>
                                        <%= url.visitHistory.length %>
                                    </td>



                                    <%});%>
                        </tbody>
                    </table>
                    <% } %>
            </div>
</body>

</html>